{% extends "CondorsTnMallBundle::MyAccountTemplate.html.twig" %}

{% block pageTitle %}
    <h1 class="page-title">My Account</h1>
{% endblock pageTitle %}

{% block titleTop %}




    <h2 class="title-heading">Register</h2>{% endblock %}

{% block registerUser %}

    <div id="Register" class="col-sm-12">
        <div class="yolo-image">
            <div class="image-background category-bg-20">
                <div class="image-title ">
                    <div class="title-content">
                        <h2 class="title-heading">Brand Register</h2>
                        <a class="btn_link" href="{{ path('condors_tn_mall_pro_regsitration') }}#Register">Brand Register Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12">
        <div class="yolo-image">
            &nbsp
        </div>
    </div>


    {% trans_default_domain 'FOSUserBundle' %}

    <style>
        .select_join {

            width: 100%;
            height: 50px;
            overflow: hidden;
            background: url('http://s24.postimg.org/lyhytocf5/dropdown.png') no-repeat right #FEFEFE;
            background-size: 40px 40px;
            background-position: top right;
            border: #FEFEFE 1px solid;
            -webkit-border-radius: 3px;
            border-radius: 3px;
            -webkit-box-shadow: inset 0px 0px 10px 1px #FEFEFE;
            box-shadow: inset 0px 0px 10px 1px #FEFEFE;

        }

        .select_join select {

            background: transparent;
            width: 170px;
            font-size: 12pt;
            color: grey;
            border: 0;
            border-radius: 0;
            height: 28px;
            -webkit-appearance: none;

            width: 500px;

        }

        .select_join select:focus {
            outline: none;

        }
        .button
        {
            width: 100%;
        }

    </style>



    {% if is_granted("IS_AUTHENTICATED_REMEMBERED")  %}
        <style>

            .moving-zone {
                position: fixed;
                top: 30%;
                left: 40%;
                width: 300px;
                height: 300px;
                margin: -60px 0 0 -150px;
                perspective: 800px;
                z-index: 50000;
            }

            .popup {
                position: fixed;
                width: 200%;
                padding: 30px;
                box-sizing: border-box;
                border-radius: 20px 0 20px 0;
                cursor: pointer;
                transform-style: preserve-3d;
                background: -webkit-linear-gradient(top left, white 50%, coral 50%);
                background: -moz-linear-gradient(top left, white 50%, coral 50%);
                background: -ms-linear-gradient(top left, white 50%, coral 50%);
                background: -o-linear-gradient(top left, white 50%, coral 50%);
                background: linear-gradient(top left, white 50%, coral 50%);
            }

            .popup:before {
                content: '';
                position: absolute;
                left: 5%;
                top: 5%;
                width: 90%;
                height: 90%;
                border-radius: inherit;
                background: rgba(0, 0, 0, .1);
                box-shadow: 0 0 40px 20px rgba(0, 0, 0, .1);
                transform: translateZ(-100px);
            }

            .popup-content {
                background: #444;
                padding: 20px;
                box-sizing: border-box;
                border-radius: 10px 0 10px 0;
            }

            .popup-text {
                color: white;
                font-family: 'Roboto', sans-serif;
                font-size: 20px;
                line-height: 30px;
                font-weight: 100;
                text-align: center;
                transform: translateZ(15px);
            }

            .popup-text b {
                color: coral;
                font-weight: 300;
            }
            .popup-text a {
                color:inherit;
                text-decoration: none;
            }



        </style>


        <div class="moving-zone">
            <div class="popup">
                <div class="popup-content">
                    <div class="popup-text">
                        You are Loged as  <b>{{app.user.username }}</b><br>
                        Please Logout <b>To Use This Page</b> <br><br><br><br>

                        <b> <a href="{{ path('fos_user_security_logout') }}">Log Out Here</a></b>

                    </div>
                </div>
            </div>
        </div>




        <div class="center">

            {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
            {#{{ form_widget(form) }}#}
            <label for="">First Name</label>
            {{ form_widget( form.prenom , { 'attr':{'disabled':'disabled'}} ) }}

            <label for="">Last Name</label>
            {{ form_widget( form.nom , { 'attr':{'disabled':'disabled'}} ) }}

            <label for="">Email</label>
            {{ form_widget( form.email , { 'attr':{'disabled':'disabled'}} ) }}

            <label for="">Cin</label>
            {{ form_widget( form.cin , { 'attr':{'disabled':'disabled'}} ) }}



            <label for="">Birthday</label>
            <div class="select_join" style="margin-left:0px">
                <table>
                    <tr>
                        <td>
                            {{ form_widget(form.Anniversaire.year , { 'attr': {'class': 'txtAnif','disabled':'disabled'} }    ) }}
                        </td>
                        <td>
                            {{ form_widget(form.Anniversaire.month , { 'attr': {'class': 'txtAnif','disabled':'disabled'} } ) }}
                        </td>
                        <td>
                            {{ form_widget(form.Anniversaire.day , { 'attr': {'class': 'txtAnif','disabled':'disabled'} } ) }}
                        </td>

                    </tr>
                </table>
            </div>
            <br>
            <label for="">Phone</label>
            {{ form_widget( form.telephone , { 'attr':{'disabled':'disabled'}} ) }}


            <label for="">Sexe</label>
            {{ form_widget( form.Sexe , { 'attr':{'disabled':'disabled'}} ) }}

            <label for="">Address</label>
            {{ form_widget( form.adresse , { 'attr':{'disabled':'disabled'}} ) }}


            <label for="">Username </label>
            {{ form_widget( form.username , { 'attr':{'disabled':'disabled'}} ) }}


            {{ form_widget( form.plainPassword , { 'attr':{'disabled':'disabled'}} ) }}
            <label for="">Profile Picture </label>
            {{ form_widget( form.file , { 'attr':{'disabled':'disabled'}} ) }}
            <br>
            <label for="">Anti Bots </label>
            <br>
            {{ form_widget( form.captcha , { 'attr':{'disabled':'disabled'}} ) }}

            <div>
                <input disabled="disabled" type="submit" class="button" value="{{ 'registration.submit'|trans }}"/>
            </div>

            {{ form_end(form) }}

        </div>




    {% else %}


        <div class="center">

            {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
            {#{{ form_widget(form) }}#}
            <label for="">First Name</label>
            {{ form_widget( form.prenom ) }}

            <label for="">Last Name</label>
            {{ form_widget( form.nom ) }}

            <label for="">Email</label>
            {{ form_widget( form.email ) }}

            <label for="">Cin</label>
            {{ form_widget( form.cin ) }}



            <label for="">Birthday</label>
            <div class="select_join" style="margin-left:0px">
                <table>
                    <tr>
                        <td>
                            {{ form_widget(form.Anniversaire.year , { 'attr': {'class': 'txtAnif'} } ) }}
                        </td>
                        <td>
                            {{ form_widget(form.Anniversaire.month , { 'attr': {'class': 'txtAnif'} } ) }}
                        </td>
                        <td>
                            {{ form_widget(form.Anniversaire.day , { 'attr': {'class': 'txtAnif'} } ) }}
                        </td>

                    </tr>
                </table>
            </div>
            <br>
            <label for="">Phone</label>
            {{ form_widget( form.telephone ) }}


            <label for="">Sexe</label>
            {{ form_widget( form.Sexe ) }}

            <label for="">Address</label>
            {{ form_widget( form.adresse ) }}


            <label for="">Username </label>
            {{ form_widget( form.username ) }}


            {{ form_widget( form.plainPassword ) }}
            <label for="">Profile Picture </label>
            {{ form_widget( form.file ) }}
            <br>
            <label for="">Anti Bots </label>
            <br>
            {{ form_widget( form.captcha ) }}

            <div>
                <input type="submit" class="button" value="{{ 'registration.submit'|trans }}"/>
            </div>

            {{ form_end(form) }}

        </div>



    {% endif %}



    <br><br><br><br>  <br><br><br><br>

{% endblock %}

