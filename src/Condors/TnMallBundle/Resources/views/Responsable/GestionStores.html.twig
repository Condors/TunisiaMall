            <script type="text/javascript">
                $("document").ready(function () {
                    $("#storesearch").keydown(function () {

                        $.ajax({
                            type: 'get',
                            url: 'http://localhost/TunisiaMall/web/app_dev.php/user-responsable/stores/searchStore/' + $("#storesearch").val(),
