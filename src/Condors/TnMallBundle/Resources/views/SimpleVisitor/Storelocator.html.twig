{% extends "CondorsTnMallBundle::MyAccountTemplate.html.twig" %}
{% block pageTitle %}
    <h1 class="page-title"></h1>
{% endblock pageTitle %}

{% block header %}
    {{ include('CondorsTnMallBundle::SimpleVisitor/parts/header.html.twig') }}

{% endblock header %}

{% block titleTop %}<h2 class="title-heading">Store locator</h2>
{% endblock %}
{% block storelocator %}

    <div align="center" ><button id="level0" class="btn-loadmore btn-primary">Ground</button>
        <button class="btn-loadmore btn-primary" id="level1">First</button>
        <button class="btn-loadmore btn-primary" id="level2">Second</button>
        <div id="mall-map1"  style="width: 720px; height: 300px"></div>
        <div  id="mall-map2"  style="width: 720px; height: 500px"></div>
        <div  id="mall-map3"  style="width: 720px; height: 500px"></div>
    </div>
{% endblock storelocator %}
 {% block oScript %}
     <script type="text/javascript" src="{{ asset('storelocator/js/jquery-1.8.2.js') }}"></script>

     <link rel="stylesheet" href="{{ asset('storelocator/css/jquery-jvectormap-2.0.3.css') }}" type="text/css" media="all"/>
     <script type="text/javascript" src="{{ asset('storelocator/js/jquery-jvectormap-2.0.3.min.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall-map0.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall-map1.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall-map2.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall-map3.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall0.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall1.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall2.js') }}"></script>
     <script type="text/javascript" src="{{ asset('storelocator/js/mall3.js') }}"></script>

     <script>
         $(document).ready(function() {
             $("#mall-map1").show();
             $("#mall-map2").hide();
             $("#mall-map3").hide();

             $("#level0 ").click(function(){
                 $("#mall-map1").show();
                 $("#mall-map2").hide();
                 $("#mall-map3").hide();


             });
             $("#level1 ").click(function(){
                 $("#mall-map1").hide();
                 $("#mall-map2").show();
                 $("#mall-map3").hide();

             });
             $("#level2 ").click(function(){
                 $("#mall-map1").hide();
                 $("#mall-map2").hide();
                 $("#mall-map3").show();
             });


         });
     </script>

 {% endblock oScript %}
